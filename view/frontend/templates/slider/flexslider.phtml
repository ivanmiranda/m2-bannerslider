                                </div>
                                <div class="actions">
                                    <button title="<?php echo __('Shop Item');?>" class="action tocart primary" onclick="addToCart(jQuery('#attribute<?php echo $product->getId().$attribute->getAttributeId(); ?>'))"><span><?php echo __('Shop Item');?></span></button>
